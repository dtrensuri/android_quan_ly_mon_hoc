<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="287dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvIdmonhoc"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:hint="ID môn hoc"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTenmh"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:hint="Tên môn"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="56dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FA4005"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSotin"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:hint="Số tín"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="|"
                android:textColor="#F10A0A"
                android:textSize="20sp"
                tools:textStyle="bold" />

            <TextView
                android:id="@+id/tvMuctieudaura"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:hint="Mục tiêu đầu ra"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text3"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="|"
                android:textColor="#F10A0A"
                android:textSize="20sp"
                tools:textStyle="bold" />

            <TextView
                android:id="@+id/tvHinhthucdanhgia"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Hình thức thi"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tex1"
                android:layout_width="33dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="|"
                android:textColor="#F10A0A"
                android:textSize="20sp"
                tools:textStyle="bold" />

            <TextView
                android:id="@+id/tvNganh"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_margin="4dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:hint="Ngành"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>