<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:context=".activity.QuanLyChuongTrinhDaoTaoActivity"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#673AB7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivTroLaiCTDT"
                android:layout_width="77dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_arrow_back" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="299dp"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Danh sách chương trình đào tạo"
                android:textColor="#FDFCFC"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lvChuongTrinh"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="#2A94E8"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvChuongTrinhDT"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="left"
                android:text="ID "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvTenChuongTrinhDT"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Tên "
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvSoTinDT"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Số tín"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvNamBatDauDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Năm"
                android:textColor="#FDFDFD" />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabThemCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="40sp"
            android:onClick="click_them_nv"
            android:src="@drawable/ic_baseline_add_24"
            app:backgroundTint="#00BCD4"
            tools:ignore="OnClick" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabLoadDanhSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="40sp"
            android:src="@drawable/ic_baseline_load"
            app:backgroundTint="#00BCD4" />

        <ListView
            android:id="@+id/lvChuongTrinh"
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="20sp" />
    </RelativeLayout>
</LinearLayout>